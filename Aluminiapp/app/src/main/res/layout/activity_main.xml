<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/im1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="147dp"
        android:layout_height="64dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="590dp"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#090909"
        android:textDirection="firstStrong"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="417dp"
        android:text="User Name:"
        android:textAlignment="textStart"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="136dp"
        android:layout_height="35dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="307dp"
        android:text="Password :"
        android:textAlignment="textStart"
        android:textColor="#050505"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:layout_marginStart="181dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="307dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#0332BC"
        android:textColorHighlight="#F8F5F5"
        android:textColorHint="#FBFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="179dp"
        android:layout_marginTop="266dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="417dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#033CCD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="156dp"
        android:layout_height="54dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="167dp"
        android:text="Login"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#0642D8" />

    <Button
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="51dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="597dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="83dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>